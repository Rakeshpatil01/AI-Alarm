#:kivy 2.0.0
#:import math math

<FloatButton@FloatLayout>:
    id: float_root
    size_hint: (None,None)
    text:''
    btn_size:(70,70)
    size:(70,70)
    bg_color:(0.404, 0.227,0.718,1.0)
    pos_hint: {'x': .5}
    Button:
        text: float_root.text
        markup: True
        size_hint:(None,None)
        size: float_root.btn_size
        pos_hint: {"center_x":0.5, "center_y":0.5}
        #background_normal:''
        background_color:(0,0,0,0)
        canvas.before:
            Color:
                rgba: float_root.bg_color
            Ellipse:
                size: self.size
                pos: self.pos

<MyClockWidget>:
    face: face
    ticks: ticks
    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size: 0.95*min(root.size), 0.95*min(root.size)
        canvas:
            Color:
                rgb: 0.1, 0.1, 0.1
            Ellipse:
                size: self.size     
                pos: self.pos
        FloatButton:
            i: 1
            text: str(self.i)
            pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/6*(self.i-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(self.i-12))}
            font_size: self.height/16
            Image:
